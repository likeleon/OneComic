@{
    ViewBag.Name = "Home";
}

@section scripts
{
  <script src="@Url.Content("~/Binding/ViewModels/ComicListViewModel.js")" type="text/javascript"></script>
}

<div data-ng-controller="ComicListViewModel">
  <div class="row">
    <div class="card-group">
      <div class="card" data-ng-repeat="comic in comics">
        <img class="card-img-top" ng-src="{{comic.CoverImage}}" alt="Card image cap">
        <div class="card-block">
          <h4 class="card-title">{{comic.Title}}</h4>
          <p class="card-text">{{comic.Description}}</p>
        </div>
      </div>
    </div>
  </div>
</div>